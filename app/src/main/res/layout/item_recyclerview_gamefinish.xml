<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGameFinishBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="40dp"
        android:layout_height="50dp"

        android:text="1"
        android:textSize="@dimen/playerListTextSize"
        android:textColor="@color/colorTextWhite"

        android:layout_marginTop="10dp"

        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:id="@+id/item_RecyclerView_gameResult_GameFinishActivity_rank"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"

        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"

        android:text="userName"
        android:textSize="@dimen/playerListTextSize"
        android:textColor="@color/colorTextWhite"

        app:layout_constraintStart_toEndOf="@id/item_RecyclerView_gameResult_GameFinishActivity_rank"
        app:layout_constraintTop_toTopOf="@id/item_RecyclerView_gameResult_GameFinishActivity_rank"
        app:layout_constraintBottom_toBottomOf="@id/item_RecyclerView_gameResult_GameFinishActivity_rank"
        app:layout_constraintEnd_toStartOf="@id/item_RecyclerView_gameRank_GameFinishActivity_score"

        android:id="@+id/item_RecyclerView_gameRank_GameFinishActivity_name"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="50dp"

        android:gravity="center"

        android:text="0"
        android:textSize="@dimen/playerListTextSize"

        app:layout_constraintTop_toTopOf="@id/item_RecyclerView_gameResult_GameFinishActivity_rank"
        app:layout_constraintBottom_toBottomOf="@id/item_RecyclerView_gameResult_GameFinishActivity_rank"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/item_RecyclerView_gameRank_GameFinishActivity_score"
        />

</androidx.constraintlayout.widget.ConstraintLayout>