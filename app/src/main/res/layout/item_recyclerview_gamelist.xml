<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="205dp"
    android:layout_height="wrap_content"
    android:background="@color/colorMainBackground"
    android:padding="20dp"
    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"

        android:src="@drawable/ic_launcher_background"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        android:id="@+id/item_RecyclerView_gameList_GameListActivity_gamePicture"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="게임명"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextBlack"

        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/item_RecyclerView_gameList_GameListActivity_gamePicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:id="@+id/item_RecyclerView_gameList_GameListActivity_gameName"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
